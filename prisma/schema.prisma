// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PageView {
  id Int @id @default(autoincrement())

  urlId Int
  url   Url @relation(fields: [urlId], references: [id], onDelete: Cascade)

  // Request info
  ip        String?
  countryId Int?
  country   Country? @relation(fields: [countryId], references: [id], onDelete: SetNull)
  cityId    Int?
  city      City?    @relation(fields: [cityId], references: [id], onDelete: SetNull)
  uAId      Int?
  ua        UA?      @relation(fields: [uAId], references: [id], onDelete: SetNull)

  // Metadata
  createdAt DateTime @default(now())

  // Single-column indexes for basic lookups
  @@index([urlId])
  @@index([createdAt])

  // Composite indexes for common query patterns
  @@index([urlId, createdAt]) // For URL-specific time-series queries
  @@index([countryId, createdAt]) // For location analytics over time
  @@index([cityId, createdAt]) // For city analytics over time
  @@index([uAId, createdAt]) // For device/browser analytics over time
  @@index([createdAt, urlId]) // For time-range queries with URL filtering
  @@index([createdAt, countryId]) // For time-range queries with country filtering
  @@index([ip, createdAt]) // For unique visitor calculations
}

model Url {
  id  Int    @id @default(autoincrement())
  url String @unique

  hostId Int
  host   Host @relation(fields: [hostId], references: [id], onDelete: Cascade)

  slugId Int
  slug   Slug @relation(fields: [slugId], references: [id], onDelete: Cascade)

  pageViews PageView[]

  createdAt DateTime @default(now())

  // Add indexes for better performance
  @@index([hostId])
  @@index([slugId])
  @@index([createdAt])
}

model Host {
  id   Int    @id @default(autoincrement())
  host String @unique
  urls Url[]

  @@index([host])
}

model Slug {
  id   Int    @id @default(autoincrement())
  slug String @unique
  urls Url[]

  @@index([slug])
}

model UA {
  id             Int        @id @default(autoincrement())
  ua             String     @unique
  browser        String?
  browserVersion String?
  engine         String?
  engineVersion  String?
  os             String?
  osVersion      String?
  device         String?
  deviceModel    String?
  deviceType     String?
  isBot          Boolean?
  botType        String?    // Category: search-crawler, ai-scraper, monitoring, social-media, seo-tool, etc.
  botName        String?    // Specific bot name: Googlebot, GPTBot, ClaudeBot, etc.
  pageViews      PageView[]

  @@index([ua])
  @@index([browser])
  @@index([os])
  @@index([isBot])
  @@index([botType])
  @@index([botName])
}

model Country {
  id        Int        @id @default(autoincrement())
  country   String     @unique
  pageViews PageView[]

  @@index([country])
}

model City {
  id        Int        @id @default(autoincrement())
  city      String     @unique
  pageViews PageView[]

  @@index([city])
}
